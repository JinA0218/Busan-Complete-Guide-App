<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/mainImg"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:src="@drawable/haeundae"
        android:scaleType="center"
        ></ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="3"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mainTitle"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="해운대포장마차촌"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15dp"
                ></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제목 : "
                    android:gravity="center_vertical"
                    android:textSize="13dp"
                    ></TextView>
                <TextView
                    android:id="@+id/subTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="낭만 추억 만들어 주는 해운대 포장마차"
                    android:gravity="center_vertical"
                    android:textSize="13dp"
                    android:layout_marginLeft="5dp"
                    ></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="위치 : "
                    android:gravity="center_vertical"
                    android:textSize="13dp"
                    ></TextView>
                <TextView
                    android:id="@+id/mainContext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="해운대포장마차촌"
                    android:gravity="center_vertical"
                    android:textSize="13dp"
                    android:layout_marginLeft="5dp"
                    ></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tag1"
                    android:layout_width="67dp"
                    android:layout_height="23dp"
                    android:text="#바다"
                    android:textSize="13dp"
                    android:layout_marginRight="12dp"
                    android:textColor="@color/black"
                    android:background="@drawable/round_button"></androidx.appcompat.widget.AppCompatButton>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tag2"
                    android:layout_width="67dp"
                    android:layout_height="23dp"
                    android:text="#술"
                    android:textSize="13dp"
                    android:layout_marginRight="12dp"
                    android:textColor="@color/black"
                    android:background="@drawable/round_button"></androidx.appcompat.widget.AppCompatButton>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tag3"
                    android:layout_width="67dp"
                    android:layout_height="23dp"
                    android:text="#낭만"
                    android:textSize="13dp"
                    android:layout_marginRight="12dp"
                    android:textColor="@color/black"
                    android:background="@drawable/round_button"></androidx.appcompat.widget.AppCompatButton>

            </LinearLayout>


        </LinearLayout>
        <ImageButton
            android:id="@+id/heartClick"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginRight="15dp"
            android:src="@drawable/heart"></ImageButton>
    </LinearLayout>





</LinearLayout>